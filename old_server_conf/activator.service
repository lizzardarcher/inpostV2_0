[Unit]
Description=Activates & updates TG accounts
After=syslog.target
After=network.target

[Service]
Type=simple
User=root
Environment="PYTHONPATH=/var/www/html/inpost"
WorkingDirectory=/var/www/html/inpost/core/static/media/sessions
ExecStart=/var/www/html/inpost/.venv/bin/python3.10 /var/www/html/inpost/core/static/media/sessions/activator.py
RestartSec=10
Restart=always

[Install]
WantedBy=multi-user.target